---
pageable: true
per_page: 10
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <article id="<%=article.date.strftime('%m-%Y')%>-article">
  <h2><%= link_to article.title, article %><span>  <%= article.date.strftime('%Y')%></span></h2>
  <!-- use article.summary(250) if you have Nokogiri available to show just
       the first 250 characters -->
  <h3></h3>

  <%= article.body %>

  <div class="<%=article.date.strftime('%m-%Y')%>-player">
      <div class="title">Track Title</div>
      <a class="prev">Previous</a>
      <a class="play">Play</a>
      <a class="pause">Pause</a>
      <a class="next">Next</a>
      <ol class="tracks"></ol>
    </div>

  <%= partial "player", :locals => { :article => article} %>


  </article>

<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
